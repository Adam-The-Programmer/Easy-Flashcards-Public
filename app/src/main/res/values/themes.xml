<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyFlashcards" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/white</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
        <item name="drawableNavigationBackground">@drawable/navigation_drawer_background</item>
        <item name="shapeAppearanceSmallComponent">@drawable/small_elements_shape</item>
        <item name="shapeAppearanceSmallComponentDark">@drawable/small_elements_shape_dark</item>
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
    </style>

    <style name="Widget.App.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_shape</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
        <item name="android:background">?attr/drawableNavigationBackground</item>
    </style>

    <style name="TopBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>

    <style name="smallComponentsStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">?attr/shapeAppearanceSmallComponent</item>
    </style>

    <style name="smallComponentsStyleDark" parent="Widget.MaterialComponents.Button">
        <item name="android:background">?attr/shapeAppearanceSmallComponentDark</item>
    </style>

    <style name="inputTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
    </style>

    <style name="expandedInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
    </style>

    <style name="inputTextStyleDark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/purple_500</item>
        <item name="hintTextColor">@color/pink</item>
        <item name="endIconTint">@color/pink</item>
        <item name="startIconTint">@color/pink</item>
        <item name="android:textColorHint">@color/pink</item>
        <item name="boxStrokeColor">@color/pink</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
    </style>

    <style name="expandedInputStyleDark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/purple_500</item>
        <item name="hintTextColor">@color/pink</item>
        <item name="endIconTint">@color/pink</item>
        <item name="startIconTint">@color/pink</item>
        <item name="android:textColorHint">@color/pink</item>
        <item name="boxStrokeColor">@color/pink</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
    </style>

    <style name="Theme.EasyFlashcards.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EasyFlashcards.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EasyFlashcards.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>